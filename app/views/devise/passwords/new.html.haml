%section#header
  %h1 Forgot your Password?
  
%section.login
  %section.full_page      
    .lform
      -if (flash[:alert])
        %p.error=flash[:alert]
      %p
        Please enter your email address and click send.
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
        %p
          = f.label :email
          %br/
          = f.text_field :email, :class => 'txt'
        %p.area= f.submit "Send", :class => 'btn'
      %br/
      %p When you click send, the website will send you an email with instructions on how to reset your password.
      = render :partial => "devise/shared/links"
  .clear
  