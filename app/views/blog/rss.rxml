xml.instruct!

xml.rss "version" => "2.0", "xmlns:dc" => "http://purl.org/dc/elements/1.1/" do
 xml.channel do

   xml.title       "UCCN Articles"
   xml.link        url_for :only_path => false, :controller => 'blog', :action => 'index'
   xml.description "UCCN Articles"

   @posts.each do |post|
     xml.item do
       xml.title       post.title
       xml.link        post.url
       xml.description post.excerpt
       xml.guid        post.id
     end
   end

 end
end