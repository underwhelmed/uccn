.block
  .block_head
    .bheadl
    .bheadr
    %h2 Blog Management
    %ul
      %li.nobg        
        = link_to image_tag('/images/add.png', :alt => 'Add', :style=>'vertical-align: text-bottom') + ' Add New Blog Post', new_admin_post_path, :style => 'line-height:5em'
  .block_content
    %p 
      %em Click the post to edit it's information
    - if @posts.empty?
      .message.warning{:style => "display: block; "}
        %p No Blog Posts currently in the system
    - else
      - if !notice.nil?
        .message.success{:style=> 'display:block;'}
          %p 
            = notice
      %table.sortable{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
        %thead
          %tr
            %th.header{:style => "cursor: pointer; "} Title
            %th.header{:style => "cursor: pointer; "} Author
            %th.header{:style => "cursor: pointer; "} Categories
            %th.header{:style => "cursor: pointer; "} Publish
            %th.header{:style => "cursor: pointer; "} Published Date
            %td.header{:style => "cursor: pointerx; "} Delete
        %tbody
          - @posts.each do |post| 
            %tr{ :class => cycle('even', 'odd') }
              %td=link_to post.title, edit_admin_post_path(post)
              %td= post.author
              %td &nbsp;LATER
              %td=post.is_published? ? 'Published' : 'Draft'
              %td=post.is_published? ? post.pretty_date : 'N/A'
              %td
                = link_to image_tag('/images/delete.png', :alt=>'Delete'), admin_post_path(post), :confirm => "Are you sure you want to delete this post?\n\nWARNING: THIS CANNOT BE UNDONE!!!!", :method => :delete
