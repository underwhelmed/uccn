= form_for [:admin, @user], :html => { :multipart => true } do |f|
  =if @user.errors.any?
    .message.errormsg{:style=> 'display:block;'}
      %p
        There were errors trying to update this user:
        %br/
        - @user.errors.full_messages.each do |msg|
          = "* #{msg}"
          %br/
  %p
    = f.label :biography
    = f.text_area :biography, :class => 'wysiwyg'  
  %p.fileupload
    =f.label :photo
    %br/
    =f.file_field :photo
    %span#uploadmsg NOTE: The photo will be resized to fit the page      
  - unless @user.new_record? || !@user.photo?
    %p
      =f.label(:delete_photo, 'Delete photo')      
      = f.check_box(:delete_photo)
  %p
    = f.submit 'Update', :class => 'submit mid'