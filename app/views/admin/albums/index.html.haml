.block
  .block_head
    .bheadl
    .bheadr
    %h2 Gallery Management
    %ul
      %li.nobg        
        = link_to image_tag('/images/add.png', :alt => 'Add', :style=>'vertical-align: text-bottom') + ' Add New Album', new_admin_album_path, :style => 'line-height:5em'
  .block_content
    %p 
      %em Click the album to edit its information
    - if @albums.empty?
      .message.warning{:style => "display: block; "}
        %p No Albums currently in the system
    - else
      - if !notice.nil?
        .message.success{:style=> 'display:block;'}
          %p 
            = notice
      %table.sortable{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
        %thead
          %tr
            %th.header{:style => "cursor: pointer; "} Name
            %th.header{:style => "cursor: pointer; "} Description
            %th.header{:style => "cursor: pointer; "} Public
            %th.header{:style => "cursor: pointer; "} Last Updated
            %td.header{:style => "cursor: pointerx; "} Options
        %tbody
          - @albums.each do |album| 
            %tr{ :class => cycle('even', 'odd') }
              %td=link_to album.name, edit_admin_album_path(album)
              %td= album.description
              %td=album.public == true ? 'Public' : 'Members Only'
              %td=post.updated_at.strftime("%-m/%-e/%Y %-l:%M %p")
              %td
                = link_to image_tag('/images/delete.png', :alt=>'Delete'), admin_album_path(album), :confirm => "Are you sure you want to delete this album?\n\nWARNING: THIS CANNOT BE UNDONE!!!!", :method => :delete
