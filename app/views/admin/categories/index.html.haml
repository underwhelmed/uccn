.block
  .block_head
    .bheadl
    .bheadr
    %h2 Blog Post Category Management    
  .block_content
    %p 
      %em Click the post to edit it's information
    = form_for [:admin, @category] do |f|
      %p
        = f.label :name
        %br/
        = f.text_field :name, :class => 'text medium'
        = f.submit :class => 'submit long'
    - if @categories.empty?
      .message.warning{:style => "display: block; "}
        %p No Blog Post Categories currently in the system
    - else
      - if !notice.nil?
        .message.success{:style=> 'display:block;'}
          %p 
            = notice
      %table.sortable{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
        %thead
          %tr
            %th.header{:style => "cursor: pointer; "} Name          
            %td.header{:style => "cursor: pointerx; "} Options
        %tbody
          - @categories.each do |category| 
            %tr{ :class => cycle('even', 'odd') }
              %td=link_to category.name, edit_admin_category_path(category)             
              %td
                = link_to image_tag('/images/delete.png', :alt=>'Delete'), admin_category_path(category), :confirm => "Are you sure you want to delete this category?\n\nWARNING: THIS CANNOT BE UNDONE!!!!", :method => :delete
