.block
  .block_head
    .bheadl
    .bheadr
    %h2 Edit Category
    %ul
      %li.nobg
        = link_to 'Cancel', admin_categories_path
  .block_content
    = form_for [:admin, @category] do |f|
      - if @category.errors.any?
        .message.errormsg{:style => "display: block; "}
          %p 
            There were errors trying to save this blog category name: 
            %br
            - @category.errors.full_messages.each do |msg|   
              *        
              = msg
              %br/   
        - if !notice.nil?
          .message.errormsg{:style=> 'display:block;'}
          %p= notice
      %p
        = f.label :name
        %br/
        = f.text_field :name, :class => 'text medium'
      %p
        = f.submit :class => 'submit long'