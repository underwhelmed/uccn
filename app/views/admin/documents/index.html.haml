.block
  .block_head
    .bheadl
    .bheadr
    %h2 Document Management
    %ul
      %li.nobg        
        = link_to image_tag('/images/add.png', :alt => 'Add', :style=>'vertical-align: text-bottom') + ' Add New Document', new_admin_document_path, :style => 'line-height:5em'
  .block_content
    %p 
      %em Click the document name to edit it's information
    - if @documents.empty?
      .message.warning{:style => "display: block; "}
        %p No Documents currently in the system
    - else
      - if !notice.nil?
        .message.success{:style=> 'display:block;'}
          %p 
            = notice
      %table.sortable{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
        %thead
          %tr
            %th.header{:style => "cursor: pointer; "} Name
            %th.header{:style => "cursor: pointer; "} Description
            %th.header{:style => "text-align:center "} Allow Download
            %th.header{:style => "cursor: pointer; "} File Last Updated
            %th.header{:style => "cursor: pointer; "} View File
            %th.header{:style => "text-align:center;"} Delete
        %tbody
          - @documents.each do |d| 
            %tr{ :class => cycle('even', 'odd') }
              %td=link_to d.name, edit_admin_document_path(d)
              %td= d.description
              %td{:style => 'text-align:center'}= d.allow_download ? 'Yes' : 'No'
              %td=d.updated_at.strftime("%-m/%-e/%Y %-l:%M %p")
              %td=link_to 'Download File', d.attachment_url, :target => "_blank"
              %td{:style => 'text-align:center'}
                = link_to image_tag('/images/delete.png', :alt=>'Delete'), admin_document_path(d), :confirm => "Are you sure you want to delete this document?\n\nWARNING: THIS CANNOT BE UNDONE!!!!", :method => :delete
