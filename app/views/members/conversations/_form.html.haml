- content_for :top_head do
  = stylesheet_link_tag "admin/jquery.wysiwyg"
  
- content_for :head do
  = javascript_include_tag "admin/jquery.wysiwyg"
  :javascript
    $(function() {
        $('.wysiwyg').wysiwyg({css: "/stylesheets/admin/wysiwyg.css"});
    });  

= form_for [:members, @conversation], :url => members_forum_path do |f|
  -if @conversation.errors.any?
    %p
      = pluralize(@conversation.errors.count, "error") 
      prohibited this post from being saved:
      %br/
      %br/
      %ul
        - @conversation.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :title
    %br/
    = f.text_field :title, :class => 'txt'

  = fields_for(@comment) do |cf|
    %p
      = cf.label :body
      %br/
      = cf.text_area :body, :class => 'wysiwyg'
  %p{:style => 'margin-top:15px'}
    = f.submit