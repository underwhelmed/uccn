- content_for :title do
  UCCN Member Directory

%section#header
  %h1 UCCN Members Directory
    
%section.main
  %section.full_width
    - if @users.empty?
      .message.warning{:style => "display: block; "}
        %p No Users to Display
    - else      
      %table{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
        %thead
          %tr
            %th.header{:style => "cursor: pointer; "} Name
            %th.header{:style => "cursor: pointer; "} Address
            %th.header{:style => "cursor: pointer; "} Phone Numbers           
            %th.header{:style => "cursor: pointer; "} Birthday
        %tbody
          - @users.each do |user| 
            %tr{ :class => cycle('even', 'odd') }              
              %td
                %strong= user.name
                = '*' if user.backup_care
                = "#{user.business_name}" if !user.business_name.nil? && !user.business_name.blank?
                %br/
                = mail_to user.email
              %td
                = user.address1
                = "<br/>" + user.address2 if !user.address2.blank?
                - if !user.city.blank? && !user.state.blank? && !user.zip_code.blank?
                  = "<br/>" + user.city + ', ' + user.state + ' ' + user.zip_code
              %td
                - if !user.phone_number.blank?
                  = "Phone: #{number_to_phone(user.phone_number)}"
              %td{:style=>"text-align:center"}
                - if !user.birthday.nil? 
                  = user.birthday.strftime("%B %d")           