!!! 5
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title 
      = yield(:title)
    %link{:rel => 'shortcut icon', :href => '/favicon.ico', :type => 'image/x-icon'}/
    = stylesheet_link_tag "boxy_lg_blue/style", :media => "all"
    = javascript_include_tag :defaults, "boxy/jquery.scrollTo", "boxy/jquery.animate-colors"

    = yield(:head)
    
    /[if IE]
      <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    = csrf_meta_tag
  %body
    #top
      #topwrapper
        #logo
          %img{:src => "/images/boxy_lg_blue/logo.png"}/
          %p.title UCCN
          %p.slogan United Child Care Network
        = render :partial => 'layouts/menu'
    #content      
      = yield
      = yield(:footer)
    %footer
      %div
        %p
          Copyright Â© 
          =Time.now.year.to_s
          All Rights Reserved
        %ul
          %li
            =link_to "Events", calendar_path
            |
          %li
            =link_to "Daycare Openings", openings_path
            |
          %li
            =link_to "Resources", resources_path
            |
          %li
            =link_to "Blog", blog_path