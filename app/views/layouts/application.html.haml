!!! 5
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title 
      = yield(:title)
    = stylesheet_link_tag "boxy_lg_blue/style", :media => "all"
    = javascript_include_tag :defaults, "boxy/jquery.scrollTo", "boxy/jquery.animate-colors"

    = yield(:head)
    
    /[if IE]
      <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    = csrf_meta_tag
  %body
    #top
      #topwrapper
        #logo
          %img{:src => "/images/boxy_lg_blue/logo.png"}/
          %p.title UCCN
          %p.slogan United Child Care Network
        = render :partial => 'layouts/menu'
    #content
      - if !notice.nil?
        %p.notice
          = notice
      - if !alert.nil? 
        %p.alert
          = alert	 
      = yield
      %section.footertop
        .one_third.black
          .title
            %h2.boxed About this site
          .elements
            %img{:src => "/images/boxy_lg_blue/footer_img.jpg"}
            %p This is a placeholder for more stuffs
          .bottom
            %a{:href => '#'} Go Here to Join us
        .one_third.black
          .title
            %h2 From the Blog
          .elements
            .post
              %h3
                %a{:href => '#'} Information on Car Seats
              %time{:datetime => '2010-04-7'} April 7, 2010
              %p This is the introduction to the post and can be set inside the post 
          .bottom
            %a{:href => '#'} Go to the Blog
        .one_third.black
          .title
            %h2 Get in Touch
          .elements
            .citem
              %h3 Address
              %p P.O. Box 130, Downers Grove, IL 60515
            .citem
              %h3 Phone
              %p (630) 343-9820
            %br/
          .bottom
            %a{:href => '#'} Contact Us            
      .clear
    %footer
      %div
        %p
          Copyright Â© 2010 All Rights Reserved
        %ul
          %li
            %a{:href => "#"}> Advertise
            |
          %li
            %a{:href => "#"}> Suggestions
            |
          %li
            %a{:href => "#"}> About Us
            |
          %li
            %a{:href => "#"}> Terms
            |
          %li
            %a{:href => "#"} Contact Us