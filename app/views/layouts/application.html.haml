!!! 5
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title= yield(:title)
    - if request_from_pdfkit?
      %style{type: "text/css"}
        = File.read(Rails.root.join("public","stylesheets","boxy_lg_blue","print.css"))
    - else
      %link{:rel => 'shortcut icon', :href => '/favicon.ico', :type => 'image/x-icon'}/
      = yield(:top_head)
      %style{:type => "text/css", :media => "screen"}
        =yield :styles
      = stylesheet_link_tag "boxy_lg_blue/style", :media => "screen"
      = stylesheet_link_tag "boxy_lg_blue/print", :media => "print"
      = javascript_include_tag :defaults, "boxy/jquery.scrollTo", "boxy/jquery.animate-colors"
      = yield(:head)
      /[if IE]
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    = csrf_meta_tag
  %body
    #top
      #topwrapper
        #logo
          - if request_from_pdfkit? 
            =pdf_image_tag '/boxy_lg_blue/logo.png' 
          -else 
            =image_tag '/images/boxy_lg_blue/logo.png'
          %p.title UCCN
          %p.slogan United Child Care Network
        = render :partial => 'layouts/menu'
    #content      
      = yield
      = yield(:footer)
      
      %section.pageboxy.white.legal     
        .elements
          %blockquote{:style => 'text-align:center;font-size:.82em'}
            UCCN Inc., does not have personal knowledge regarding qualifications of these providers and is not referring these providers to anyone.
            %br/
            %br/
            No part of this website may be reproduced, transmitted or distributed in any form for compensation of any kind, without prior written permission of the author.
    %footer
      %div
        %p
          Copyright Â© 
          =Time.now.year.to_s
          United Child Care Network, Inc., All Rights Reserved        
        %ul
          %li
            =link_to "Terms of Use", terms_path
            |
          %li
            =link_to "Privacy Policy", privacy_path 
