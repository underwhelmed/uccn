!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title UCCN Administration
    = stylesheet_link_tag "admin/master", :media => "all"
    /[if IE] 
      <meta http-equiv="X-UA-Compatible" content="IE=7" />
    /[if lt IE 8]  
      = stylesheet_link_tag "admin/ie", :media => "all"
    /[if IE] 
      = javascript_include_tag "admin/excanvas.js"
    = javascript_include_tag :defaults, "admin/jquery.img.preload.js", "admin/jquery.filestyle.mini", "admin/jquery.wysiwyg", "admin/jquery.date_input.pack", "admin/facebox", "admin/jquery.visualize", "admin/jquery.select_skin", "admin/jquery.tablesorter.min", "admin/jquery.pngfix", "admin/custom.js"
    = yield(:head)
    = csrf_meta_tag
  %body
    #hld
      .wrapper
        #header
          .hdrl
          .hdrr
          = render 'layouts/user_admin_menu'          
        = yield
        .footer
          %p.left
            = link_to "UCCN", :root