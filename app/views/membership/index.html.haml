- title("Membership Requests")
  
%section#header
  %h1 Membership Requests
%section.pageboxy.white
  %section.full_width
    .elements
      - if @memberships.empty?
        .message.warning{:style => "display: block; "}
          %p No Membership Requests currently in the system
      - else
        - if !notice.nil?
          .message.success{:style=> 'display:block;'}
            %p= notice
        %table.sortable{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
          %thead
            %tr
              %th.header{:style => "cursor: pointer; "} First Name
              %th.header{:style => "cursor: pointer; "} Last Name
              %th.header{:style => "cursor: pointer; "} Date Submitted
              %td.header{:style => "cursor: pointerx; "} Delete
          %tbody
            - @memberships.each do |membership| 
              %tr{ :class => cycle('even', 'odd') }
                %td= link_to membership.first_name, view_membership_path(:token => membership.token)
                %td= membership.last_name
                %td
                  = time_ago_in_words(membership.created_at)
                  ago
                %td= link_to image_tag('/images/delete.png', :alt=>'Delete'), delete_membership_path(membership), :confirm => "Are you sure you want to delete this membership request?\n\nWARNING: THIS CANNOT BE UNDONE!!!!", :method => :delete